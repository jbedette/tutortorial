<!DOCTYPE html>
<html>
  <head>
    <title>Tutortorial</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="backimg">

    <div id="navbar">
      <div id="navbar2">
  			<ul>
  				<li id="home"><a href="/">Home</a></li>
          <% if !current_user || current_user.usertype == "Tutor" %>
    				<li id="tutors"><a href="#" class="dropbtn">Tutors</a>
    					<div class="drop_down_4all" id="drop_down_tutors">
              <% if not current_user %>
    						<div class="drop_down_tutors_sub">
      							<a href="/users/sign_up?t=Tutor">Register New</a>
    						</div>
              <% end %>
              <% if not current_user %>
              <% else %>
    						<div class="drop_down_tutors_sub">
    							<a href="/users/:id/edit">Edit Existing</a>
    						</div>
                <% end %>
                <% if not current_user %>
                <% else %>
      						<div class="drop_down_tutors_sub">
      							<a href="/">View All</a>
      						</div>
              <% end %>
    					</div>
            <% end %>
          <% if !current_user || current_user.usertype == "Student" %>
    				</li>
      				<li id="students"><a href="#" class="dropbtn">Students</a>
      					<div class="drop_down_4all" id="drop_down_students">
                  <% if not current_user %>
        						<div class="drop_down_students_sub">
        							<a href="/users/sign_up?t=Student">Register New</a>
        						</div>
                  <% end %>
                  <% if not current_user %>
                  <% else %>
        						<div class="drop_down_students_sub">
        							<a href="/students/edit">Edit Your Profile</a>
        						</div>
                  <% end %>
      					</div>
      				</li>
          <% end %>
          <li id="posts"><a href="#" class="dropbtn">Posts</a>
  					<div class="drop_down_4all" id="drop_down_posts">
  						<div class="drop_down_posts_sub">
  							<a href="/posts">View All</a>
  						</div>
              <div class="drop_down_posts_sub">
  							<a href="<%= edit_post_path(@post) if @post %>">Edit Existing</a>
  						</div>
  						<div class="drop_down_posts_sub">
  							<a href="<%= new_post_path %>">Create New</a>
  						</div>
  					</div>
  				</li>
          <% if current_user %>
            <li id="signout"><%= link_to 'Sign Out',  { :action=>"destroy", :controller=>"devise/sessions" }, method: :delete  %></li>
          <% end %>
  			</ul>
  		</div>
		</div>
    <br><br><br>

    <%= yield %>
    <span id="noticestyle">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </span>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
