
<div class="page_header">
  Posts
</div>
<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subject</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |eapost| %>
      <tr>
        <td><%= eapost.title %></td>
        <td><%= eapost.subject %></td>
        <td><%= eapost.content %></td>
        <td><%= link_to 'Show', eapost %></td>
        <td><%= link_to 'Edit', edit_post_path(eapost) %></td>
        <td><%= link_to 'Destroy', eapost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
