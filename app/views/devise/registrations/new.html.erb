<div class="page_header">
  Register
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="align_job2">
    <%= f.label :fname, "First Name:", :class => "labelStyle" %>
    <%= f.text_field :fname, :class => "fieldStyle", autofocus: true %>
    <%= f.label :lname, "Last Name:", :class => "labelStyle" %>
    <%= f.text_field :lname, :class => "fieldStyle" %><br>

    <%= f.label :location, "Location:", :class => "labelStyle" %>
    <%= f.text_field :location, :class => "fieldStyle" %>

    <%= f.label :phnumber, "Phone #:", :class => "labelStyle" %>
    <%= f.text_field :phnumber, :class => "fieldStyle" %><br>

    <span class="droplist">
      <%= f.label :usertype, "Register as:", :class => "labelStyle" %>
      <%= f.select :usertype, ['Tutor', 'Student'] %>
    </span>

    <%= f.label :email, "Email:", :class => "labelStyle" %>
    <%= f.email_field :email, :class => "fieldStyle" %><br>

    <%= f.label :password, "Password:", :class => "labelStyle" %>
    <% password_options = @minimum_password_length ? { :placeholder => "#{@minimum_password_length} characters minimum"} : {} %>

    <%= f.password_field :password, password_options.merge( :class => "fieldStyle", autocomplete: "off" ) %><br>

    <%= f.label :password_confirmation, "Password Confirmation:", :class => "labelStyle" %>
    <%= f.password_field :password_confirmation, password_options.merge(:class => "fieldStyle", autocomplete: "off") %><br>
    <%= f.submit "Submit", :class => "buttonJobSave4" %>
  </div>
<% end %>
