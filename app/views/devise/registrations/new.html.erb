<div class="page_header">
  Register
</div>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="align_job2">
    <%= f.label :fname, "First Name:", :class => "labelStyle" %>
    <%= f.text_field :fname, :class => "fieldStyle", autocomplete: "off", autofocus: true %>
    <%= f.label :lname, "Last Name:", :class => "labelStyle" %>
    <%= f.text_field :lname, :class => "fieldStyle", autocomplete: "off" %><br>

    <%= f.label :location, "Location:", :class => "labelStyle" %>
    <%= f.text_field :location, :class => "fieldStyle", autocomplete: "off" %>

    <%= f.label :phnumber, "Phone #:", :class => "labelStyle" %>
    <%= f.text_field :phnumber, :class => "fieldStyle", autocomplete: "off" %><br>

    <span class="droplist">
      <%= f.label :usertype, "Register as:", :class => "labelStyle" %>
      <%= f.select :usertype, ['Tutor', 'Student'], selected: params[:t] %>
    </span>

    <%= f.label :email, :class => "labelStyle" %>
    <%= f.email_field :email, :class => "fieldStyle", autocomplete: "off" %><br>

    <%= f.label :password, :class => "labelStyle" %>
    <span class="labelStyle">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </span>
    <%= f.password_field :password, :class => "fieldStyle", autocomplete: "off" %><br>

    <%= f.label :password_confirmation, "Password Confirmation:", :class => "labelStyle" %>
    <%= f.password_field :password_confirmation, :class => "fieldStyle", autocomplete: "off" %><br>
    <%= f.submit "Submit", :class => "buttonJobSave4" %>
  </div>
<% end %>
